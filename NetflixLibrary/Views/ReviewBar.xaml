<UserControl x:Class="NetflixLibrary.Views.ReviewBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetflixLibrary.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
        <TextBlock VerticalAlignment="Center" Margin="0, 0, 5, 0">1</TextBlock>
        <RadioButton VerticalAlignment="Center" GroupName="Rating" x:Name="RButton1"/>
        <RadioButton VerticalAlignment="Center" GroupName="Rating" x:Name="RButton2"/>
        <RadioButton VerticalAlignment="Center" GroupName="Rating" x:Name="RButton3"/>
        <RadioButton VerticalAlignment="Center" GroupName="Rating" x:Name="RButton4"/>
        <RadioButton VerticalAlignment="Center" GroupName="Rating" x:Name="RButton5"/>
        <TextBlock VerticalAlignment="Center" Margin="5, 0, 0, 0">5</TextBlock>
    </StackPanel>
</UserControl>
