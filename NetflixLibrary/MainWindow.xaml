<Window x:Class="NetflixLibrary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetflixLibrary"
        xmlns:views="clr-namespace:NetflixLibrary.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <DockPanel>
        <views:ShowInfo DockPanel.Dock="Right" x:Name="ShowInfo"  Margin="2"/>
        <Border BorderBrush="Black" BorderThickness="1" CornerRadius="8" Margin="2">
            <TabControl Margin="4">
                <TabItem Header="My Library">
                    <views:ShowLibrary ShowClicked="ShowLibrary_ShowClicked"/>
                </TabItem>
                <TabItem Header="Search Shows"/>
            </TabControl>
        </Border>
    </DockPanel>
</Window>
